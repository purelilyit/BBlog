<h1> Portfolio Items </h1>

<% @portfolio_items.each do |portfolio_item| %>
  	<p><%= portfolio_item.title %></p>
  	<p><%= portfolio_item.subtitle %></p>
  	<p><%= portfolio_item.body %></p>
  	<!-- <p>portfolio.item.main_image</p>       ***not included as it is not needed on the home page for now-->
  	<%= image_tag portfolio_item.thumb_image %>
<% end %>

<%= link_to 'Create a New Portfolio item', new_portfolio_path %>
