<div class="card" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_item.thumb_image_url unless portfolio_item.thumb_image_url.nil?%>
  <p class="card-text">
    <span><%= link_to portfolio_item.title, portfolio_path(portfolio_item) if logged_in?(:site_admin) %></span>
    <%= portfolio_item.subtitle %>
  </p>
  <p>
    <%= link_to 'Edit Item', edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %> |
    <%= link_to 'Delete Item', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
    <hr>
  </p>
</div>
