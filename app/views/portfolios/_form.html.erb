<%= form_with(model: @portfolio_item, local: true) do |form| %>
<div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
      <div class="form-group">
	      <label class="btn btn-primary">
            Upload a main image file<%= form.file_field :main_image, style: 'display:none;' %>
        </label>
	    </div>
      <div class="form-group">
	       <label class="btn btn-primary">
            Upload a thumbnail image file<%= form.file_field :thumb_image, style: 'display:none;' %>
         </label>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
</div>

<hr>

<div class="col-md-4">
  <h4>Technologies Used</h4>
    <div>
  	  <%= form.fields_for :technologies do |technology_form| %>
        <div class="form-group">
      		<%= technology_form.label :name %>
      		<%= technology_form.text_field :name , class: 'form-control'%>
        </div>
  	  <% end %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
